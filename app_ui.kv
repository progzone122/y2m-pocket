MDScreenManager:
        

    ### == Main === ###
    MDScreen:
        name: "main"
        md_bg_color: "#373745"

        ## TopBar
        MDTopAppBar:
            type: "small"
            size_hint_y: 0.1
            pos_hint: {"center_x": 0.5, "top": 1}

            MDTopAppBarLeadingButtonContainer:
                MDActionTopAppBarButton:
                    icon: 'progress-question'
                    on_release:
                        root.transition.direction = "right"
                        root.current = "info"                        

            MDTopAppBarTitle:
                text: 'Y2M Pocket'
                pos_hint: {"center_x": 0.5}
                font_style: 'Headline'
                role: 'small'
          

        ## Welcome text
        MDLabel:
            text: 'Use YouTube, SoundCloud or YTMusic links to download songs, playlists or videos in audio format!'
            halign: 'center'
            theme_text_color: "Primary"
            padding: dp(15)
            pos_hint: {"center_x": 0.5, "center_y": 0.825}

        ## Entry and find
        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {"center_x": 0.5, "center_y": 1.175}            
            size_hint_x: 0.8
            spacing: dp(15)

            ## Entry
            MDTextField:
                id: entry
                mode: 'outlined'
                size_hint_x: 0.6           

                MDTextFieldHintText:
                    text: 'Enter the link'

                MDTextFieldLeadingIcon:
                    icon: 'link'
            
            ## Proceed btn
            MDFabButton:
                icon: "magnify"
                on_release:
                    app.proceed()

        ## Divider
        MDDivider:
            thickness: dp(6)
            pos_hint: {"center_x": 0.5, "center_y": 0.625}
            size_hint_x: 0.95

        ## Song info
        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_x: 0.85
            spacing: dp(20)


            ## Album cover
            AsyncImage:
                id: cover
                size: "200dp", "200dp"
                size_hint: None, None
                pos_hint: {"center_x": 0.5, "center_y": 0.425}
                source: "https://catbox.moe/pictures/qts/1446543984763.png"
                source: "https://catbox.moe/pictures/qts/1450722871010.png"

                
            ## Song info
            MDLabel:
                id: song_info
                text: 'Hello!\nContent info will be here as soon as you press the find button!'
                halign: 'center'
                theme_text_color: "Secondary"
                pos_hint: {"center_x": 0.5, "center_y": 0.425}


        ## Segmented Button
        MDSegmentedButton:
            id: format_choice
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            size_hint_x: 0.85
            
            MDSegmentedButtonItem:
                on_release:
                    app.format_upd('audio')
                active: True
                MDSegmentButtonIcon:
                    icon: 'music'
                MDSegmentButtonLabel:
                    text: "audio"
            
            MDSegmentedButtonItem:
                on_release:
                    app.format_upd('video')                
                MDSegmentButtonIcon:
                    icon: 'video'                
                MDSegmentButtonLabel:
                    text: "video"    

        ## Download button
        MDButton:
            id: btn_download
            style: 'elevated'
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            disabled: True
            on_release:
                app.call_dwnl()

            MDButtonIcon:
                icon: 'download'
            MDButtonText:
                text: 'Download'
                    


    ### == Info === ###
    MDScreen:
        name: "info"
        md_bg_color: "#373745"

        ## TopBar
        MDTopAppBar:
            type: "small"
            size_hint_y: 0.1
            pos_hint: {"center_x": 0.5, "top": 1}

            MDTopAppBarTitle:
                text: 'Information'
                pos_hint: {"center_x": 0.5}
                font_style: 'Headline'
                role: 'small'

            MDTopAppBarTrailingButtonContainer:
                MDActionTopAppBarButton:
                    icon: 'arrow-right'
                    on_release:
                        root.transition.direction = "left"
                        root.current = "main"

        ## Name text
        MDLabel:
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            text: "Some more information"
            halign: 'center'
            theme_text_color: "Secondary"
            padding: dp(25)
            font_style: 'Headline'
            role: 'large'


        ## Info text
        MDLabel:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            text: "Thanks for using Y2M Pocket! App is still in developing so there can be some bugs. Also remember about this things:\n1. Some playlists can not be downloaded.\n2. Some content can require age verification so also can not be downloaded.\n3. Use valid links only or app crashes!\n\nI also planning to add more functions and make app better in the future. Check app updates and changelog on project's GitHub page for any news!"
            halign: 'center'
            theme_text_color: "Secondary"
            padding: dp(25)
            font_style: 'Title'
            role: 'medium'
        
        ## GitHub button
        MDButton:
            style: 'elevated'
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            on_release:
                app.github()

            MDButtonIcon:
                icon: 'github'
            MDButtonText:
                text: 'GitHub page'
        
        ## Extra text
        MDLabel:
            pos_hint: {"center_x": 0.5, "center_y": 0.025}
            text: "v. 1.0            gonna make this page better later lol"
            halign: 'center'
            theme_text_color: "Secondary"
            padding: dp(25)
            font_style: 'Title'
            role: 'small'